<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="290dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/dialog_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="70dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Name" />
        <Button
            android:id="@+id/dialog_mobile_id"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/dialog_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            tools:text="Mobile Call"
            android:layout_marginTop="10dp"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/dialog_purpose_id"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textAllCaps="false"
            tools:text="Purpose"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/dialog_time_id"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/entrytime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@android:color/white"
            tools:text="Entry Time"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/dialog_outTime"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/exittime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textAllCaps="false"
            android:textColor="#000"
            tools:text="Exit Time"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/dialog_address_id"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textAllCaps="false"
            tools:text="Address"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/audioPlay"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/audio_plau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Play Recording"
            android:textAllCaps="false"
            android:layout_gravity="start" />
    </LinearLayout>
    <ImageView
        android:id="@+id/dialog_photo_id"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/userphoto"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/person_image_school_desc"/>

</RelativeLayout>