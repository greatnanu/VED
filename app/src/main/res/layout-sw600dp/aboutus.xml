<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="400dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/about_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:text="Name" />

        <Button
            android:id="@+id/about_desc"
            android:padding="23dp"
            android:drawablePadding="23dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/ic_assignment_ind_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            tools:text="Desc"
            android:layout_marginTop="10dp"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/about_mobile"
            android:padding="23dp"
            android:drawablePadding="23dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/dialog_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            tools:text="Mobile"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/about_email"
            android:padding="23dp"
            android:drawablePadding="23dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            tools:text="Email"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/about_address"
            android:padding="23dp"
            android:drawablePadding="23dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            tools:text="Address"
            android:layout_gravity="start" />
    </LinearLayout>
    <ImageView
        android:id="@+id/about_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/userphoto"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/person_image_school_desc"/>

</RelativeLayout>