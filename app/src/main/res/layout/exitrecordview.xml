<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="300dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/dialog_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Name" />
        <TextView
            android:id="@+id/dialog_relation_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Name" />
        <Button
            android:id="@+id/dialog_student_name"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/group"
            android:drawablePadding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            tools:text="Student Name"
            android:layout_marginTop="10dp"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/dialog_mobile_id"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/dialog_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            tools:text="Mobile Number"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/dialog_time_id"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/entry_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            tools:text="Exit Time"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/dialog_student_details"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/studentdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            tools:text="Student Details"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/dialog_address_id"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            tools:text="Address"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/audioPlay"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/audio_plau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="@string/play"
            android:textAllCaps="false"
            android:layout_gravity="start" />
    </LinearLayout>
    <ImageView
        android:id="@+id/dialog_photo_id"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/userphoto"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/person_image_school_desc"/>

</RelativeLayout>